<!DOCTYPE html>
<html>

  <%= render 'layouts/head' %>

  <body>

    <div class="container">
      <%= render "shared/flash_messages", flash: flash %>
      
      <br>

      <%
        # Progress bar
        width = case params[:action]
          when "step1" then "25"
          when "step2" then "50"
          when "step3" then "75"
          end
      %>

      <div class="progress">
        <div class="progress-bar progress-bar-striped" role="progressbar" style="width: <%= width %>%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
      </div>

      <hr>

      <%= yield %>

      <br>
      <%= render 'layouts/footer' %>
    </div>
  </body>
</html>
