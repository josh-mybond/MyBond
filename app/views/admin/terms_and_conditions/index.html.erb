<h1 id="admin_postcodes">Terms and Conditions</h1>

<%= form_with(url: admin_terms_and_conditions_path, method: "get", html: { class: 'form' }, local: true ) do %>
  <div class="form-row">
    <div class="col-md-8">
      <!--
      <i class="fas fa-search" aria-hidden="true"></i>
      -->
      <%= text_field_tag(:query, params[:query], id: 'admin_terms_and_conditions_search_query', class: 'form-control', placeholder: "Terms and condition", required: true) %>
    </div>
    <div class="col-md-1">
      <%= submit_tag("Go", class: 'btn btn-primary', id: "admin_terms_and_conditions_search_go") %>
    </div>
    <div class="col-md-2">
      <%= link_to "Clear", admin_terms_and_conditions_path, class: 'btn btn-warning' %>
    </div>
  </div>

  <div class="form-row hidden" id="admin_terms_and_conditions_search">
    <div class="col-md-8">
      <ul class="list-group form-control" id="admin_terms_and_conditions_search_results"></ul>
    </div>
  </div>
<% end %>

<br>

<table>
  <thead>
    <tr>
      <th>Status</th>
      <th>Summary</th>
      <th>Full</th>
      <th></th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @terms_and_conditions.each do |terms_and_condition| %>
      <tr>
        <td><%= terms_and_condition.status %></td>
        <td><%= terms_and_condition.summary[0..40] if terms_and_condition.summary %></td>
        <td><%= terms_and_condition.full[0..40]    if terms_and_condition.full    %></td>
        <td>
        </td>
        <td><%= link_to 'Show', [:admin, terms_and_condition] %> : <%= link_to 'Edit', edit_admin_terms_and_condition_path(terms_and_condition) %></td>
        <!--
        <td><%#= link_to 'Destroy', [:admin, user], method: :delete, data: { confirm: 'Are you sure?' } %></td>
        -->
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div class="row">
  <div class="col-md-12 d-flex justify-content-center">
    <%= paginate @terms_and_conditions %>
  </div>
</div>

<div class="row">
  <div class="col-md-12 d-flex justify-content-center">
    <small>
      <%= page_entries_info @terms_and_conditions %>
    </small>
  </div>
</div>

<br>

<%= link_to 'New Terms And Condition', new_admin_terms_and_condition_path %>
