<div class="row">
  <div class="col-lg-12">
    <h3 id="admin_users">Pay by Credit Card</h1>
  </div>
</div>

<%= render partial: 'admin/customers/contracts/customer_details' %>

<br>

<div class="row">
  <div class="col-lg-12">
    <%= form_with(url: admin_customer_contract_pay_by_credit_card_path(customer_id: @customer, contract_id: @contract.id), method: "post", local: true) do |f| %>
      <%= f.submit "Allow this customer to pay by credit card", class: "btn btn-warning", data: { confirm: 'Are you sure?' } %>
    <% end %>
  </div>
</div>

