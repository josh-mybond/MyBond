<div class="container">
  <h2>Contact</h2>

  <%= form_with(url: contact_form_path, method: "get", local: true) do %>

    <div class="row form-group">
      <div class="col-lg-12">
        <%= label_tag "Name" %>
        <%= text_field_tag "name", @name, class: "form-control", placeholder: "Name", required: true %>
      </div>
    </div>

    <div class="row form-group">
      <div class="col-lg-12">
        <%= label_tag "Email" %>
        <%= text_field_tag "Email", @email, class: "form-control", placeholder: "Email", required: true %>
      </div>
    </div>

    <div class="row form-group">
      <div class="col-lg-12">
        <%= label_tag "Mobile" %>
        <%= text_field_tag "Mobile", @mobile, class: "form-control", placeholder: "Mobile Number", required: true %>
      </div>
    </div>

    <div class="row form-group">
      <div class="col-lg-12">
        <%= label_tag "Message" %>
        <%= text_area_tag "Message", @message, class: "form-control", placeholder: "Message", required: true %>
      </div>
    </div>

    <%= submit_tag "Contact", class: "btn btn-success" %>

  <% end %>

</div>
